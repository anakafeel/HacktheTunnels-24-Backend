{
  "compilerOptions": {
    "outDir": "dist",                       // Output directory for compiled files
    "sourceMap": true,                      // Generate source maps for debugging
    "target": "esnext",                     // Set ECMAScript target version
    "module": "commonjs",                   // Specify module code generation
    "esModuleInterop": true,                // Enables emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "noImplicitAny": false,                 // Allow expressions and declarations to have an 'any' type
    "strict": false,                        // Disable all strict type-checking options
    "skipLibCheck": true                    // Skip type checking of declaration files
  },
  "include": [
    "src/**/*.ts",                          // Include all TypeScript files in the src directory
    "test/**/*.ts"                          // Include all TypeScript files in the test directory
  ],
  "exclude": [
    "node_modules",                         // Exclude node_modules
    "dist"                                  // Exclude compiled files in dist
  ]
}
